<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <ImageView
        android:id="@+id/slikaNote"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_writing"
        app:srcCompat="@drawable/car" />


    <TextView
        android:id="@+id/textViewProstorija"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slikaNote"
        android:layout_marginTop="20dp"
        android:text="Automobil"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/carName"
        android:layout_below="@+id/textViewProstorija"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textViewTrajanjeRezervacije"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/carName"
        android:layout_marginTop="20dp"
        android:text="Period"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/rentTime"
        android:layout_below="@+id/textViewTrajanjeRezervacije"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textViewCijena"
        android:layout_below="@+id/rentTime"
        android:layout_marginTop="20dp"
        android:textSize="17dp"
        android:text="Cijena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/rentalPrice"
        android:layout_below="@+id/textViewCijena"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btnRent"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="Rentaj"
        android:textColor="@android:color/white"
        android:textStyle="bold" />



</RelativeLayout>